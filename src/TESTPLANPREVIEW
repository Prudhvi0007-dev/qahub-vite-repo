import React, { useState, useRef } from "react";

/*
  Test Plan Preview â€“ React + Tailwind
  -----------------------------------
  FIX APPLIED:
  - Fixed JSX syntax error caused by an unclosed Fragment in <Section />
  - Kept browser-native print-to-PDF (window.print)
  - PDF respects current theme
  - Header hidden during print
*/

/* =========================
   Reusable Components
   ========================= */

function Section({ title, children }) {
  return (
    <>
      <style>{`
        @media print {
          @page { size: A4; margin: 16mm; }
          body { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
        }
      `}</style>
      <section className="max-w-7xl mx-auto px-16 mb-32 print:mb-20">
        <h2 className="text-3xl font-medium mb-10 print:text-2xl">{title}</h2>
        {children}
      </section>
    </>
  );
}

function Metric({ value, label, sub }) {
  return (
    <div>
      <div className="text-6xl font-semibold print:text-4xl">{value}</div>
      <div className="mt-2 text-sm opacity-60">{label}</div>
      {sub && <div className="text-xs opacity-40 mt-1">{sub}</div>}
    </div>
  );
}

function Detail({ label, value }) {
  return (
    <div className="flex justify-between border-b border-current/10 py-4">
      <span className="opacity-60">{label}</span>
      <span>{value}</span>
    </div>
  );
}

function CoverageBar({ manual, automation }) {
  const total = manual + automation;
  const manualPct = total ? (manual / total) * 100 : 0;
  const autoPct = total ? (automation / total) * 100 : 0;

  return (
    <div className="w-full">
      <div className="flex h-3 w-full overflow-hidden rounded-full bg-current/10">
        <div className="h-full bg-amber-400" style={{ width: `${manualPct}%` }} />
        <div className="h-full bg-emerald-500" style={{ width: `${autoPct}%` }} />
      </div>
      <div className="mt-2 flex justify-between text-xs opacity-60">
        <span>Manual: {manual}</span>
        <span>Automation: {automation}</span>
      </div>
    </div>
  );
}

/* =========================
   Main Screen
   ========================= */

export default function TestPlanPreview() {
  const [theme, setTheme] = useState("dark");
  const isDark = theme === "dark";
  const printRef = useRef(null);

